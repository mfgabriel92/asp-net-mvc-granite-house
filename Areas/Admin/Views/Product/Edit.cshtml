@model GraniteHouse.Models.ViewModels.ProductViewModel
@using GraniteHouse.Extensions
@{
    ViewData["Title"] = "Edit product";
}

<h3 class="text-info">Edit product</h3>

<form method="POST" enctype="multipart/form-data" asp-action="Edit">
    <input type="hidden" asp-for="Product.ID" >
    <div class="p-4 border rounded row">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-8">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Product.Name"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Product.Name" class="form-control">
                </div>
                <span asp-validation-for="Product.Name" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Product.Price"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Product.Price" class="form-control">
                </div>
                <span asp-validation-for="Product.Price" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Product.Image"></label>
                </div>
                <div class="col-8">
                    <input type="file" name="files" class="form-control-file">
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Product.ProductType"></label>
                </div>
                <div class="col-8">
                    <select asp-for="@Model.Product.ProductTypeId" asp-items="Model.ProductType.ToSelectListItem(Model.Product.ProductTypeId)" class="form-control"></select>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Product.SpecialTag"></label>
                </div>
                <div class="col-8">
                    <select asp-for="@Model.Product.SpecialTagId" asp-items="Model.SpecialTag.ToSelectListItem(Model.Product.SpecialTagId)" class="form-control"></select>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Product.ShadeColor"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Product.ShadeColor" class="form-control">
                </div>
                <span asp-validation-for="Product.ShadeColor" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Product.IsAvailable"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Product.IsAvailable">
                </div>
            </div>
            <br/>
            <div class="form-group">
                <button class="btn btn-primary">Update</button>
                <a asp-action="Index" class="btn btn-secondary">Back to list</a>
            </div>
        </div>
        <div class="col-4">
            <img src="@Model.Product.Image" width="100%" class="p-4 border rounded"/>
        </div>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}