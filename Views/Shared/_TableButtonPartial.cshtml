@model int

<div class="btn-group" role="group">
    <a type="button" class="btn btn-info btn-sm" href="@Url.Action("Edit/"+Model)">
        <i class="fas fa-edit"></i>
    </a>
    <a type="button" class="btn btn-warning btn-sm" href="@Url.Action("Details/"+Model)">
        <i class="fas fa-eye"></i>
    </a>
    <a type="button" class="btn btn-danger btn-sm" href="@Url.Action("Delete/"+Model)">
        <i class="fas fa-trash-alt"></i>
    </a>
</div>